<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.qhzlwh.yigua.ui.fragment.Register2">
<include layout="@layout/top_tilte"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="验证码"/>
        <EditText
            android:id="@+id/input_charge"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入收到的验证码"/>
        </LinearLayout>
<View
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="昵    称"/>
        <EditText
            android:id="@+id/input_pass"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1-16位（中英文，数字，下划线）"/>
    </LinearLayout>
    <View
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="密    码"/>
        <EditText
            android:id="@+id/input_pass_confim"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6-14位（数字，字母，符号）"/>
    </LinearLayout>
    <View
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="设置这个密码，以后就能用于手机登录。"/>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="注册"
        android:textSize="20sp"
        android:background="@drawable/button_background"
        android:layout_height="wrap_content" />
</LinearLayout>
