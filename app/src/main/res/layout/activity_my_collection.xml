<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gloomy"
    tools:context="com.qhzlwh.yigua.ui.activity.MyCollection">
    <include layout="@layout/top_tilte"/>
    <android.support.design.widget.TabLayout
            android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab_layout"
        android:background="@color/white"
        app:tabIndicatorColor="@color/colorPrimary1"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/colorPrimary1"
        ></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_marginTop="8dp"
        android:id="@+id/info_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
</LinearLayout>
