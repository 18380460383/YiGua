<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fitsSystemWindows="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/top_Back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:src="@drawable/icon_arrow_left_white" />

            <TextView
                android:id="@+id/scenic_spot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="22dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/top_bak"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/top_bak" />

                <com.qhzlwh.yigua.view.CircularImage
                    android:id="@+id/top_like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/like2" />
            </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <com.qhzlwh.yigua.view.MyScrollViewL
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/id_stickynavlayout_topview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/top_image"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <View
                                android:layout_width="100dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/top_head_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:text="青海湖"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="100dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center"
                                android:background="@color/white" />
                        </LinearLayout>
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/scenic_spot_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text=""
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#F9F9F9" />

                    <RelativeLayout
                        android:id="@+id/navi_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/adress_ic"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/address" />

                        <TextView
                            android:layout_marginLeft="2dp"
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/adress_ic"
                            android:text="" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_below="@+id/adress_ic"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/distance" />

                        <TextView
                            android:layout_marginLeft="2dp"
                            android:id="@+id/detail_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/adress_ic"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/adress_ic"
                            android:text="" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/s_jr_ico" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#F9F9F9" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/biaoqian_1"
                            android:layout_width="4dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="12dp"
                            android:background="@color/yellow"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@+id/biaoqian_1"
                            android:text="门票购买"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/money_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/biaoqian_1"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="15dp"
                            android:layout_toRightOf="@+id/biaoqian_1"
                            android:text="门票价格:￥400/人"
                            android:visibility="gone" />

                        <com.qhzlwh.yigua.view.ListViewNoSrcoll
                            android:id="@+id/item_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/money_textview"
                            android:layout_below="@+id/money_textview"
                            android:layout_margin="10dp"
                            android:layout_marginTop="10dp"></com.qhzlwh.yigua.view.ListViewNoSrcoll>

                        <TextView
                            android:id="@+id/item_explain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/money_textview"
                            android:layout_below="@id/item_listview"
                            android:layout_marginTop="10dp"
                            android:text="购票说明"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/signup_explain_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/money_textview"
                            android:layout_below="@id/item_explain"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="10dp"
                            android:text="购票说明"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/scenic_spot_detail_order"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="预定"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#F9F9F9" />

                </LinearLayout>

                <include android:id="@+id/radio" layout="@layout/senic_radio_item" />

                <FrameLayout
                    android:id="@+id/fragment_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>
            </LinearLayout>

            <include android:id="@+id/top_radio"
                layout="@layout/senic_radio_item_top" />

          <!--  <TextView
                android:layout_marginTop="46dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="1"/>-->
        </RelativeLayout>
    </com.qhzlwh.yigua.view.MyScrollViewL>

<!--    <LinearLayout
        android:id="@+id/search01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/top_lay"
        android:orientation="vertical"></LinearLayout>-->
</LinearLayout>
