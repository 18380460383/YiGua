<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_days"
        android:text="第一天"/>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="往"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_location_time"
            android:text="12:00"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_point"
            android:text="客运中心"/>
        </RelativeLayout>
    </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:orientation="horizontal"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/item_starting_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="12:00"/>
              <TextView
                  android:layout_gravity="center"
                  android:layout_marginTop="16dp"
                  android:id="@+id/item_starting_point"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="兰州"/>
          </LinearLayout>
          <LinearLayout
              android:layout_gravity="center"
              android:layout_marginLeft="48dp"
              android:layout_marginRight="48dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <ImageView
                  android:layout_gravity="center"
                  android:layout_width="8dp"
                  android:layout_height="8dp"
                  />
              <View
                  android:layout_gravity="center"
                  android:layout_width="48dp"
                  android:layout_height="2dp"
                  android:background="@color/colorPrimary"/>
              <ImageView
                  android:layout_gravity="center"
                  android:layout_width="8dp"
                  android:layout_height="8dp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:layout_gravity="center"
                  android:id="@+id/item_destination_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="12:00"/>

              <TextView
                  android:layout_gravity="center"
                  android:layout_marginTop="16dp"
                  android:id="@+id/item_destination_point"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="成都"/>
              </LinearLayout>

      </LinearLayout>

  </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="行程介绍"
            android:id="@+id/trip_description"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:text="入住：酒店名称"
            android:textColor="@color/colorPrimary"
            android:id="@+id/hotel_name"/>

    </LinearLayout>
    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dash_bg"/>
</LinearLayout>