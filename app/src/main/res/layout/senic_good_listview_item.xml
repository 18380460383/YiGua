<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/good_listview_item_image"
            android:layout_marginLeft="8dp"
            android:layout_width="108dp"
            android:layout_height="72dp"
            android:background="@drawable/banner2"/>
    <TextView
        android:id="@+id/good_listview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="美食"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/good_listview_item_image"/>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/good_listview_item_image"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/good_listview_item_content"
            android:text="介绍"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/good_item_price"
            android:text="18.00"
            android:textColor="@color/yellow_dark"/>
    </LinearLayout>

</RelativeLayout>