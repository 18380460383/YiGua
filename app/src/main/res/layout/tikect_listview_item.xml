<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/tikect_item_background_yellow"
        android:id="@+id/tikect_bg"

        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tikect_type"
        android:text="活动票"/>
    <TextView
        android:layout_below="@id/tikect_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仙女湾门票"
        android:layout_centerHorizontal="true"
        android:id="@+id/tikect_name"
        android:textColor="@color/white"
        android:textSize="18sp"
      />
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:background="@drawable/button_solid_white"
        android:layout_below="@id/tikect_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门票数量：2张"
            android:id="@+id/tikect_count"/>
        <TextView
            android:layout_below="@id/tikect_count"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期："
            android:id="@+id/tikect_work"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/tikcet_use"
            android:layout_marginRight="8dp"
            android:padding="2dp"
            android:layout_below="@id/tikect_count"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:background="@drawable/tikect_use_bg_yellow"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="使用"/>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>