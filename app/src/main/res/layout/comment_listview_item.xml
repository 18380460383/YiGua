<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<com.qhzlwh.yigua.view.CircularImage
    android:layout_marginLeft="8dp"
    android:id="@+id/item_user_image"
    android:layout_width="48dp"
    android:layout_height="48dp" />
        <TextView
            android:textSize="20sp"
            android:id="@+id/item_user_name"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_user_image"
            android:text="name"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/item_user_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1000人喜欢"/>
        <TextView
            android:id="@+id/item_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_user_image"
            android:layout_below="@+id/item_user_name"
            android:layout_marginLeft="8dp"
            android:text="2016-30"
                />
        <TextView
            android:id="@+id/item_user_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_user_image"
            android:layout_below="@+id/item_user_time"
            android:text="content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>