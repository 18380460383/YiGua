<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qhzlwh.yigua.ui.activity.CustomizationTour">
    <include android:id="@+id/top" layout="@layout/top_tilte"/>
  <ScrollView
      android:layout_below="@id/top"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

    <LinearLayout
        android:id="@+id/startcity_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            style="@style/stand_textview"
            android:text="出发地："/>
        <TextView
            android:id="@+id/custom_start_location"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="请输入或选择出发地"/>
        <ImageView
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:id="@+id/city_choice"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gloomy"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            style="@style/stand_textview"
            android:text="目的地："/>
        <EditText
            android:id="@+id/custom_location"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="多个目的地请用、隔开"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gloomy"/>
    <LinearLayout
        android:id="@+id/startday_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            style="@style/stand_textview"
            android:text="出发日期："/>
        <TextView
            android:id="@+id/custom_startday"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
           />
        <ImageView
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:id="@+id/custom_choice_startday"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gloomy"/>
    <LinearLayout
        android:id="@+id/day_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            style="@style/stand_textview"
            android:text="游玩天数："/>
        <TextView
            android:id="@+id/custom_day"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
           />
        <TextView
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:text="天"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gloomy"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/stand_textview"
            android:text="出行人数"/>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/adult_choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成人"/>
                <EditText
                    android:textSize="16dp"
                    android:id="@+id/custom_adult"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="成人"/>
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gloomy"/>

                    <LinearLayout
                        android:id="@+id/child_choice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小孩"/>
                        <EditText
                            android:textSize="16dp"
                            android:id="@+id/custom_child"
                            android:layout_margin="8dp"
                            android:background="@null"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="小孩（0-12岁，1.2米以下）"/>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人"/>
                    </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gloomy"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/stand_textview"
            android:text="旅游费用预算："/>
        <EditText
            android:layout_gravity="center"
            android:id="@+id/custom_precount"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_height="wrap_content"
           />
        <TextView
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:text="元/人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gloomy"/>
          <LinearLayout
              android:id="@+id/hotel_choice"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  android:text="住宿标准:"
                  style="@style/stand_textview" />
              <TextView
                  android:id="@+id/hotel_text"
                  style="@style/stand_textview_show" />
              <ImageView
                  android:layout_marginRight="8dp"
                  android:layout_gravity="center"
                  android:layout_width="12dp"
                  android:layout_height="16dp"
                  android:src="@drawable/arrow2"/>
          </LinearLayout>


