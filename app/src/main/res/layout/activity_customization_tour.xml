    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gloomy"/>
    <TextView
        style="@style/stand_textview"
        android:text="其他需求"/>
    <EditText
        android:id="@+id/custom_other"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="点击输入您的其他要求"
        android:textSize="15dp"
        android:gravity="left"
        android:padding="8dp"
        android:background="@drawable/edittext_bg"
        />
          <TextView
              style="@style/stand_textview"
              android:text="联系方式"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <TextView
                  android:layout_gravity="center"
                  style="@style/stand_textview"
                  android:text="联系人"/>
              <EditText
                  android:layout_gravity="center"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:id="@+id/custom_contact_person"/>
              <RadioGroup
                  android:id="@+id/custom_person"
                  android:layout_alignParentRight="true"
                  android:gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
              <RadioButton
                  android:id="@+id/custom_rab_man"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="32dp"
                  android:text="先生"/>
              <RadioButton
                  android:id="@+id/custom_rab_woman"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="32dp"
                  android:text="女士"/>
              </RadioGroup>
          </LinearLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gloomy"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  style="@style/stand_textview"
                  android:text="联系电话："/>
              <EditText
                  android:id="@+id/custom_phone"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:textSize="16dp"
                  android:layout_gravity="center_vertical"
                  android:hint="请输入联系电话"/>
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gloomy"/>
          <LinearLayout
              android:layout_marginBottom="48dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  style="@style/stand_textview"
                  android:text="常用邮箱："/>
              <EditText

                  android:id="@+id/custom_mail"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:textSize="14dp"
                  android:layout_gravity="center_vertical"
                  android:hint="请认真填写您的邮箱，以便更好的为您服务"/>
          </LinearLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/gloomy"/>

      </LinearLayout>
  </ScrollView>
    <RelativeLayout
        android:background="@color/gloomy"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/custom_submit"
            android:textSize="22dp"
            android:background="@drawable/button_retangle_solid"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="提交"/>
    </RelativeLayout>
</RelativeLayout>
